<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment3">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:id="@+id/data_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent_black"
            android:orientation="vertical"

            app:layout_constraintHeight="0.9"
            app:layout_constraintHeight_default="percent"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintBottom_toBottomOf="parent">


            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:maxLines="1"

                android:text="@string/city_name"
                android:textColor="@color/white"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/city_coord"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/currentDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:maxLines="1"

                android:text="@string/currentDate"
                android:textColor="@color/white"
                app:autoSizeTextType="uniform" />


            <GridLayout
                android:id="@+id/grid1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:columnCount="2"
                android:rowCount="1">

                <LinearLayout
                    android:id="@+id/imagePart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="0.5"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:src="@drawable/sun"
                        android:textColor="@color/white"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/Weather_Status"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/temperaturePart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        app:autoSizeTextType="uniform" />

                    <LinearLayout
                        android:id="@+id/temp_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TempMax"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/temp_max"
                            android:textColor="@color/white"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/TempMin"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/temp_min"
                            android:textColor="@color/white"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>
                </LinearLayout>

            </GridLayout>



            <GridLayout
                android:id="@+id/grid2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:columnCount="6"
                android:rowCount="3">

                <!-- Day -->
                <TextView
                    android:id="@+id/day1"
                    android:text="@string/day1"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/day2"
                    android:text="@string/day2"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/day3"
                    android:text="@string/day3"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/day4"
                    android:text="@string/day4"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/day5"
                    android:text="@string/day5"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/day6"
                    android:text="@string/day6"
                    android:layout_column="5"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>


        <!-- Weather icon -->
                <TextView
                    android:id="@+id/weather1"
                    android:text="@string/weather1"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/weather2"
                    android:text="@string/weather2"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/weather3"
                    android:text="@string/weather3"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/weather4"
                    android:text="@string/weather4"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/weather5"
                    android:text="@string/weather5"
                    android:layout_column="4"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/weather6"
                    android:text="@string/weather6"
                    android:layout_column="5"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>



                <!-- Temperature -->
                <TextView
                    android:id="@+id/temp1"
                    android:text="@string/temp1"

                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/temp2"
                    android:text="@string/temp2"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/temp3"
                    android:text="@string/temp3"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/temp4"
                    android:text="@string/temp4"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/temp5"
                    android:text="@string/temp5"
                    android:layout_column="4"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/temp6"
                    android:text="@string/temp6"
                    android:layout_column="5"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"/>
            </GridLayout>

        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>